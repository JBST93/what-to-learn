<div class="container py-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <h1>Edit your course</h1>
      <p>Required fields have an asterisk: *</p>
      <%= simple_form_for @course do |f| %>
        <%= f.error_notification %>
          <div class="form-inputs">
          <div class="row">
            <%= f.input :title, required: true, class: "form-control", label: "Title" %>
          </div>
          <div class="row">
            <%= f.input :description, required: true, class: "form-control", label: "Course description" %>
          </div>
          <div class="row">
            <%= f.input :start_date, as: :date %>
          </div>
          <div class="row">
            <%= f.input :end_date, as: :date %>
          </div>
          <div class="row">
            <div class="col-6">
              <%= f.input :tag %>
            </div>
            <div class="col-6">
              <%= f.input :price, as: :integer %>
            </div>
          <div class="row">
          </div>
            <%= f.input :address %>
          </div>
          <div class="row">
            <%= f.input :text_editor, required: true, class: "form-control", label: "Course details" %>
          </div>
          <div class="row">
            <%= f.input :prep, required: true, class: "form-control", label: "Prep work" %>
          </div>
          <div class="row">
            <%= f.input :welcome_message, required: true, class: "form-control", label: "Welcome message" %>
          </div>
        </div>
        <div class="form-actions">
        <%= f.button :submit, "Confirm changes", class: "w-100 mt-2 btn btn-primary inner-text btn-block align-center" %>
        </div>
      <% end %>
      <div><%= button_to "Delete course", course_path(@course), method: :delete, data: { turbo_confirm: "Are you sure?" }, class: "w-100 mt-3 btn btn-light border border-secondary btn-block" %></div>
    </div>
</div>
</div>

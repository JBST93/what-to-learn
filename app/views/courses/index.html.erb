<div class="banner d-flex justify-content-center align-items-center">
  <div class="d-flex flex-column">
    <h1 class="title mb-3">World-class live courses</h1>
    <div class="d-flex flex-row mx-auto gap-3">
      <% if user_signed_in? %>
        <p class="banner-text">Level up your career today</p>
      <% else %>
        <%= link_to "Start learning", new_user_registration_path, class: "btn btn-primary m-0" %>
      <% end %>
    </div>
  </div>
</div>
<div class="page-container">
  <div class="row gap-3 justify-content-between">
    <% @courses.each do |course| %>
      <%= render "shared/card", course: course %>
    <% end %>
  </div>
</div>

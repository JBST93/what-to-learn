<div class="banner d-flex justify-content-center align-items-center">
  <div class="d-flex flex-column">
    <h1 class="title mb-3">World-class live courses</h1>
    <div class="d-flex flex-row mx-auto gap-3">
      <button class="btn btn-primary w-fit">Sign up now</button>
      <button class="btn btn-secondary w-fit">Log in</button>
    </div>
  </div>
</div>
<div class="page-container">
  <div class="row">
    <% @courses.each do |course| %>
      <div class="col">
        <%= render "shared/card", course: course %>
      </div>
    <% end %>
  </div>
</div>

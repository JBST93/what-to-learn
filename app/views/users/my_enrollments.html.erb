<div class="page-container">
  <div class="mt-4 mb-4">
    <% if current_user.student? %>
      <div class="d-flex">
        <h1 class="enrollments-title">Hi <%= current_user.first_name.capitalize%> ðŸ‘‹ </h1>
      </div>
      <% if @my_enrollments.empty? %>
        <h5 class="mt-4 mb-4">You have not enrolled in any course, we suggest you enroll in one!</h5>
        <%= link_to "Explore courses", courses_path, class: "button" %>
      <% else %>
        <h5 class="mt-4 mb-4">Here are your enrollments: </h5>
        <div class="cards-container gap-3">
          <% @my_enrollments.each do |my_enrollment| %>
            <%= render partial: 'shared/card', locals: { course: my_enrollment.course } %>
          <% end %>
        </div>
        <div class="row d-flex justify-content-between pt-5 mt-4">
          <div class="col-7">
            <div class="calendar w-100" data-controller="calendar" class="enrollments-text">
            </div>
          </div>
          <div class="col-4 profile">
            <h3 class="mt-2 pb-3 border-bottom border-dark-subtle mb-4 border-2">Profile </h3>
            <div class="row mt-3">
              <h5 class="profile-text">First name: <%= current_user.first_name.capitalize %></h5>
            </div>
            <div class="row mt-3">
              <h5 class="profile-text">Last name: <%= current_user.last_name.capitalize %></h5>
            </div>
            <div class="row mt-3">
                <h5 class="profile-text">Email: <%= current_user.email %></h5>
            </div>
            <div class="row mt-3">
                <h5 class="profile-text">Bio: <%= current_user.bio %></h5>
            </div>
            <div class="row mt-3">
                <h5 class="profile-text">Role: <%= current_user.role %></h5>
            </div>
            <div class="row mt-3">
              <%= link_to "Edit profile", edit_user_registration_path, class: "mt-3 btn btn-outline-dark" %>
            </div>

          </div>

          </div>
        </div>
      <% end %>
    <% else %>
      <div class="d-flex flex-row justify-content-between align-items-center">
        <h1 class="enrollments-title">Hi <%= current_user.first_name.capitalize%> ðŸ‘‹ </h1>
        <%= link_to "Create a course", new_course_path, class: "button" %>
      </div>
      <% if @my_courses.empty? %>
        <h5 class="my-4">You have not created any course yet.</h5>
      <% else %>
        <div class="cards-container gap-3">
          <% @my_courses.each do |my_course| %>
            <%= render partial: 'shared/card', locals: { course: my_course } %>
          <% end %>
        </div>
        <div class="calendar w-50" data-controller="calendar" class="enrollments-text">
        </div>
      <% end %>
    <% end %>

  </div>
</div>

<style>
  #calendar {
    width: 50%;
    margin: 0 auto;
}
</style>

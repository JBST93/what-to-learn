<div class="page-container mt-4 pb-0">
  <div class="row d-flex justify-content-between align-items-center">
    <div class="col-sm-4">
      <h2 class="form-title m-0">Find Your <strong>Dream Course</strong></h2>
    </div>
    <div class="col-sm-7">
      <%= form_with url: courses_path, method: :get, class: "d-flex w-100" do %>
        <%= text_field_tag :query,
              params[:query],
              class: "form-control form-control-lg",
              placeholder: "e.g. Web Development Bootcamp"%>
        <%= submit_tag "Find my course", name: "", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>

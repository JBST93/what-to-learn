<div class="container pt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <h1>Create an Account</h1>
      <p>Required fields have an asterisk: *</p>
      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= f.error_notification %>

        <div class="form-inputs">
        <div class="row">
          <div class="col-md-6">
            <%= f.input :first_name, required: true, class: "form-control", label: "First Name" %>
          </div>
          <div class="col-md-6">
            <%= f.input :last_name, required: true, class: "form-control", label: "Last Name" %>
          </div>
        </div>
          <%= f.input :avatar, as: :file, label: "Upload an Avatar", class: "form-control" %>
          <%= f.input :email,
                      required: true,
                      autofocus: true,
                      class: "form-control",
                      input_html: { autocomplete: "email" }%>
          <%= f.input :role, label: "Change your role", class: "form-control", collection: User::ROLE, default: User::ROLE[0] %>
          <%= f.input :password,
                      required: true,
                      hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                      class: "form-control",
                      input_html: { autocomplete: "new-password" } %>
          <%= f.input :password_confirmation,
                      label: "Confirm Your Password",
                      class: "form-control",
                      required: true,
                      input_html: { autocomplete: "new-password" } %>
        </div>

        <div class="form-actions">
        <%= f.button :submit, "Create my Account", class: "w-100 mt-2 btn btn-primary btn-block align-center" %>
        </div>
      <% end %>
  <%= render "devise/shared/links" %>
</div>
</div>
</div>

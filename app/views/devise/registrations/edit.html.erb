<div class="page-container">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-md-6">
        <h1>Edit your Account</h1>
        <p>Required fields have an asterisk: *</p>

        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= f.error_notification %>
          <div class="form-inputs">
          <div class="row">
            <div class="col-md-6">
              <%= f.input :first_name, required: true, class: "form-control", label: "First Name" %>
            </div>
            <div class="col-md-6">
              <%= f.input :last_name, required: true, class: "form-control", label: "Last Name" %>
            </div>
          </div>
            <%= f.input :avatar, as: :file, label: "Edit your Avatar", class: "form-control" %>
            <%= f.input :email,
                        required: true,
                        autofocus: true,
                        class: "form-control",
                        input_html: { autocomplete: "email" }%>
            <%= f.input :role, label: "Change your role", class: "form-control", collection: User.roles.keys, selected: current_user.role %>
            <%= f.input :current_password,
              label:"To confirm changes, please provide your current password",
              hint: "We need your current password to confirm your changes",
              required: true,
              input_html: { autocomplete: "current-password" } %>
          </div>

          <div class="form-actions">
          <%= f.button :submit, "Confirm changes", class: "w-100 mt-2 btn btn-primary inner-text btn-block align-center" %>
          </div>
          <div class="row">
            <div class="col-6 pe-1"><%= button_to "Change password (TO DO)", registration_path(resource_name), data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete, class: "w-100 mt-2 btn btn-light border border-secondary btn-block" %></div>
            <div class="col-6 ps-1"><%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete, class: "w-100 mt-2 btn btn-light border border-secondary btn-block" %></div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

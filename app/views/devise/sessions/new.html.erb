<div class="container">
  <div class="row justify-content-center mt-4">
    <div class="col-md-6">
      <h2 class="mb-4">Log in to your account</h2>

      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "form-login" }) do |f| %>
        <div class="form-inputs">
          <%= f.input :email, required: false, autofocus: true, input_html: { autocomplete: "email" }, class: "form-control", label: "Email" %>
          <%= f.input :password, required: false, input_html: { autocomplete: "current-password" }, class: "form-control", label: "Password" %>
          <%= f.input :remember_me, as: :boolean, label: "Remember me", class: "form-check-input" if devise_mapping.rememberable? %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Log in", class: "btn btn-primary btn-block w-100" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
